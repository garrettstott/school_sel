<div class='row'>
  <div class='col-sm-6 col-sm-offset-3 text-center'>
    <h3><%= @school.name %></h3>
  </div>
</div>

<div class='row'>
  <div class='col-sm-6 show-info-div'>
    <h6><%= @school.phone_number %></h6>
    <h6><%= @school.address %></h6>
    <h6><%= @school.email %></h6>
    <h6><%= @school.year_built %></h6>
  </div>

  <div class='col-sm-6 col-sm-offset-3 text-center show-img-div'>
    <img class='default-school-img' src='http://quickwit3d.com/wp-content/uploads/2013/05/BnaiYoelSchool_Exterior.jpg' />
  </div>
</div>


<div class='row'>
  <div class='col-sm-2'>
    <%= link_to 'Edit', edit_school_path(@school), class: 'btn btn-warning edit-btn' %>
  </div>
</div>
